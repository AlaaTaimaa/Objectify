<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="de.hsrm.objectify"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.HARDWARE_TEST" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.front" android:required="true" />
	
    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/ApplicationStyle">
        <activity android:name=".MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".camera.CameraActivity" android:screenOrientation="portrait"/>
		<activity android:name=".gallery.GalleryActivity" />
		<activity android:name=".gallery.GalleryDetailsActivity" />
		<activity android:name=".rendering.ObjectViewerActivity">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:scheme="file" />
				<data android:mimeType="application/x-tgif" />
				<data android:pathPattern=".*\\.obj" />
				<data android:host="*" />
			</intent-filter>
		</activity>
		<activity android:name=".howto.HowToActivity" />
		<provider android:name=".database.DatabaseProvider" android:authorities="de.hsrm.objectify.databaseprovider.content" />
    </application>
</manifest>